<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_dark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <View
            android:id="@+id/top_menu_1"
            android:layout_width="375dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="44dp"
            />


        <View
            android:id="@+id/path"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="@id/top_menu_1"
            app:layout_constraintStart_toStartOf="@id/top_menu_1"
            app:layout_constraintEnd_toStartOf="@id/movList"
            app:layout_constraintBottom_toBottomOf="@id/top_menu_1"

            android:layout_marginTop="17.78dp"
            android:layout_marginBottom="17.78dp"
            android:layout_marginStart="21.83dp"
            android:layout_marginEnd="13.67dp"

            android:background="@drawable/circle"
            />


        <View
            android:id="@+id/path2"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="@id/top_menu_1"
            app:layout_constraintStart_toStartOf="@id/top_menu_1"
            app:layout_constraintEnd_toStartOf="@id/movList"
            app:layout_constraintBottom_toBottomOf="@id/top_menu_1"

            android:layout_marginTop="14.22dp"
            android:layout_marginBottom="14.22dp"
            android:layout_marginStart="18.23dp"
            android:layout_marginEnd="10.07dp"

            android:background="@drawable/circle"
            />


                <View
            android:id="@+id/line_1"
            android:layout_width="3dp"
            android:layout_height="1dp"
                    app:layout_constraintStart_toEndOf="@id/path2"
                    app:layout_constraintTop_toTopOf="@id/path2"
                    app:layout_constraintBottom_toBottomOf="@id/path2"



                    android:background="@drawable/line"
                    tools:ignore="MissingConstraints" />


        <View
            android:id="@+id/line_2"
            android:layout_width="3dp"
            android:layout_height="1dp"
            app:layout_constraintEnd_toStartOf="@id/path2"
            app:layout_constraintTop_toTopOf="@id/path2"
            app:layout_constraintBottom_toBottomOf="@id/path2"


            android:background="@drawable/line"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/line_3"
            android:layout_width="1dp"
            android:layout_height="3dp"
            app:layout_constraintStart_toStartOf="@id/path2"
            app:layout_constraintEnd_toEndOf="@id/path2"
            app:layout_constraintTop_toBottomOf="@id/path2"


            android:background="@drawable/line"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/line_4"
            android:layout_width="1dp"
            android:layout_height="3dp"
            app:layout_constraintStart_toStartOf="@id/path2"
            app:layout_constraintEnd_toEndOf="@id/path2"
            app:layout_constraintBottom_toTopOf="@id/path2"
            android:background="@drawable/line"
            tools:ignore="MissingConstraints" />



        <TextView
            android:id="@+id/movList"
            android:layout_width="0dp"
            android:layout_height="20dp"


            app:layout_constraintTop_toTopOf="@id/top_menu_1"
            app:layout_constraintStart_toStartOf="@id/top_menu_1"
            app:layout_constraintEnd_toEndOf="@id/top_menu_1"
            app:layout_constraintBottom_toBottomOf="@id/top_menu_1"


            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="11dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="135dp"
            android:layout_centerVertical="true"
            android:text="@string/movies_list"
            android:lineSpacingExtra="4sp"
            android:gravity="center_vertical"
            />

        <View
            android:id="@+id/bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="102dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="193dp"
            android:clickable="true"
            android:onClick="movieDetailsClick"
            />

        <ImageView
            android:id="@+id/bgg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            app:layout_constraintTop_toTopOf="@id/bg"
            app:layout_constraintStart_toStartOf="@id/bg"
            app:layout_constraintEnd_toEndOf="@id/bg"
            app:layout_constraintBottom_toBottomOf="@id/bg"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="48dp"
            android:src="@drawable/movie5"
            android:scaleType="centerCrop"
            />


        <View
            android:id="@+id/bgGrad"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:background="@drawable/gradient"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@id/bgg"
            app:layout_constraintEnd_toEndOf="@id/bgg"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/bgg"
            app:layout_constraintTop_toTopOf="@id/bgg"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/rectangle"
            android:layout_width="24dp"
            android:layout_height="24dp"

            app:layout_constraintStart_toStartOf="@id/bgg"
            app:layout_constraintTop_toTopOf="@id/bgg"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"

            android:src="@drawable/rectangle"
            android:alpha="0.9"
            />

        <TextView
            android:id="@+id/some_id"
            android:layout_width="0dp"
            android:layout_height="16dp"
            app:layout_constraintStart_toStartOf="@id/rectangle"
            app:layout_constraintEnd_toEndOf="@id/rectangle"
            app:layout_constraintTop_toTopOf="@id/rectangle"
            app:layout_constraintBottom_toBottomOf="@id/rectangle"
            android:layout_marginTop="4sp"
            android:layout_marginBottom="4sp"


            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:text="@string/_13"
            android:gravity="center_horizontal|center_vertical"
            />


        <ImageView
            android:id="@+id/like"
            android:layout_width="16dp"
            android:layout_height="14dp"
            app:layout_constraintEnd_toEndOf="@id/bgg"
            app:layout_constraintTop_toTopOf="@id/bgg"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/like"
            android:alpha="0.75"
            />

        <TextView
            android:id="@+id/tag"
            android:layout_width="146dp"
            android:layout_height="12dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/action_adventure_drama"
            android:lineSpacingExtra="3sp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@id/bgg"
            app:layout_constraintBottom_toBottomOf="@id/bgg"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="22dp"
            android:textColor="@color/rasp"
            android:textSize="8sp"
            />


        <ImageView
            android:id="@+id/star_icon"
            android:layout_width="8dp"
            android:layout_height="8dp"
            app:layout_constraintStart_toStartOf="@id/bgg"
            app:layout_constraintBottom_toBottomOf="@id/bgg"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/star2"
            android:adjustViewBounds="true"

            />

        <ImageView
            android:id="@+id/star_icon2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            app:layout_constraintStart_toEndOf="@id/star_icon"
            app:layout_constraintBottom_toBottomOf="@id/bgg"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/star2"
            android:adjustViewBounds="true"

            />

        <ImageView
            android:id="@+id/star_icon3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            app:layout_constraintStart_toEndOf="@id/star_icon2"
            app:layout_constraintBottom_toBottomOf="@id/bgg"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/star2"
            android:adjustViewBounds="true"

            />

        <ImageView
            android:id="@+id/star_icon4"
            android:layout_width="8dp"
            android:layout_height="8dp"
            app:layout_constraintStart_toEndOf="@id/star_icon3"
            app:layout_constraintBottom_toBottomOf="@id/bgg"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/star2"
            android:adjustViewBounds="true"

            />

        <ImageView
            android:id="@+id/star_icon5"
            android:layout_width="8dp"
            android:layout_height="8dp"
            app:layout_constraintStart_toEndOf="@id/star_icon4"
            app:layout_constraintBottom_toBottomOf="@id/bgg"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/star"
            android:adjustViewBounds="true"

            />

        <TextView
            android:id="@+id/nambe"
            app:layout_constraintStart_toEndOf="@id/star_icon5"
            app:layout_constraintBottom_toBottomOf="@id/bgg"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="8dp"


            android:layout_width="53dp"
            android:layout_height="12dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/_125_reviews"
            android:textSize="8sp"
            android:textColor="@color/dark_grey"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:lineSpacingExtra="3sp"
            android:gravity="center_vertical"
            />


        <TextView
            android:id="@+id/name"
            android:layout_width="132dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="@id/bg"
            app:layout_constraintStart_toStartOf="@id/bg"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/avengers_end_game"
            android:textStyle="bold"
            android:textColor="@color/light_light"
            android:lineSpacingExtra="4sp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/min"
            android:layout_width="154dp"
            android:layout_height="12dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/_137_min"
            android:textSize="8sp"
            android:textColor="@color/dark_grey"
            android:lineSpacingExtra="3sp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@id/bg"
            app:layout_constraintEnd_toEndOf="@id/bg"
            app:layout_constraintBottom_toBottomOf="@id/bg"
            android:textAllCaps="true"
            android:textStyle="bold"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>