 <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/dark_dark"
        >


         <View
             android:id="@+id/top_menu_1"
             android:layout_width="0dp"
             android:layout_height="40dp"
             android:layout_marginTop="44dp"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/path"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintTop_toTopOf="@id/top_menu_1"
            app:layout_constraintStart_toStartOf="@id/top_menu_1"
            app:layout_constraintEnd_toStartOf="@id/movList"
            app:layout_constraintBottom_toBottomOf="@id/top_menu_1"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/combined_shape"
            />

        <TextView
            android:id="@+id/movList"
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="@id/top_menu_1"
            app:layout_constraintStart_toStartOf="@id/top_menu_1"
            app:layout_constraintEnd_toEndOf="@id/top_menu_1"
            app:layout_constraintBottom_toBottomOf="@id/top_menu_1"

            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="11dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="135dp"
            android:layout_centerVertical="true"
            android:text="@string/movies_list"
            android:lineSpacingExtra="4sp"
            android:gravity="center_vertical"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMovies"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_menu_1"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="18dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:transitionGroup="true"
            />


