<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_dark"

    >

    <ImageView
        android:id="@+id/chevron"
        android:layout_width="6dp"
        android:layout_height="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="59dp"
        android:background="@color/dark_dark"
        android:src="@drawable/Path"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="56dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/dark_dark"
        android:text="Back"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="298dp"
        android:foreground="@drawable/gradient"
        android:scaleType="fitXY"
        android:src="@drawable/orig"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/textView0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="16dp"
        android:text="13+"
        android:textColor="@color/white"
        android:textSize="12sp"

        />


    <TextView
        android:id="@+id/textView0"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="254dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-medium"
        android:lineHeight="40dp"
        android:lines="2"
        android:text="Avengers:\nEnd Game"
        android:textAlignment="viewStart"
        android:textColor="@color/light_light"
        android:textFontWeight="900"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineHeight="36dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Action, Adventure, Fantasy"
        android:textColor="@color/rasp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView0" />

    <ImageView
        android:id="@+id/star0"
        android:layout_width="13.02dp"
        android:layout_height="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        />
    <ImageView
        android:id="@+id/star1"
        android:layout_width="13.02dp"
        android:layout_height="12dp"
        app:layout_constraintStart_toEndOf="@id/star0"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        />
    <ImageView
        android:id="@+id/star2"
        android:layout_width="13.02dp"
        android:layout_height="12dp"
        app:layout_constraintStart_toEndOf="@id/star1"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        />
    <ImageView
        android:id="@+id/star3"
        android:layout_width="13.02dp"
        android:layout_height="12dp"
        app:layout_constraintStart_toEndOf="@id/star2"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        />
    <ImageView
        android:id="@+id/star4"
        android:layout_width="13.02dp"
        android:layout_height="12dp"
        app:layout_constraintStart_toEndOf="@id/star3"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="112dp"
        android:layout_height="20dp"
        android:layout_marginStart="8.89dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-medium"
        android:text="125 Reviews"
        android:textAllCaps="true"
        android:textColor="@color/reviews"
        app:layout_constraintStart_toEndOf="@id/star4"
        app:layout_constraintTop_toBottomOf="@id/textView1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Storyline"
        android:textColor="@color/white"
        android:textFontWeight="900"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textFontWeight="300"

        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        android:text="After the devastating events of Avengers: Infinity War, the universe is in ruins. With the help of remaining allies, the Avengers assemble once more in order to reverse Thanos' actions and restore balance to the universe."/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Cast"
        android:textColor="@color/light_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView4" />


    <ImageView
        android:id="@+id/imageView0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/movie0"

        app:layout_constraintEnd_toStartOf="@+id/imageView1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/movie1"

        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView0"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="7dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView1"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        android:src="@drawable/movie2"

        />
     />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"

        android:layout_marginEnd="16dp"
        android:src="@drawable/movie3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView2"

        app:layout_constraintTop_toBottomOf="@id/textView5" />


    <TextView
        android:id="@+id/label0"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif-medium"
        android:text="Robert Downey Jr."

        android:textColor="@color/label"
        android:textFontWeight="900"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/imageView0"

        app:layout_constraintStart_toStartOf="@id/imageView0"

        app:layout_constraintTop_toBottomOf="@id/imageView0" />

    <TextView
        android:id="@+id/label1"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif-medium"
        android:text="Chris \nEvans"
        android:textColor="@color/label"
        android:textFontWeight="900"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/imageView1"

        app:layout_constraintStart_toStartOf="@id/imageView1"
        app:layout_constraintTop_toBottomOf="@id/imageView1" />

    <TextView
        android:id="@+id/label2"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif-medium"
        android:text="Mark \nRuffalo"
        android:textColor="@color/label"
        android:textFontWeight="900"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/imageView2"

        app:layout_constraintStart_toStartOf="@id/imageView2"
        app:layout_constraintTop_toBottomOf="@id/imageView2" />

    <TextView
        android:id="@+id/label3"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif-medium"
        android:text="Chris Hemsworth"
        android:textColor="@color/label"
        android:textFontWeight="900"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/imageView3"
        app:layout_constraintStart_toStartOf="@id/imageView3"
        app:layout_constraintTop_toBottomOf="@id/imageView3" />

</androidx.constraintlayout.widget.ConstraintLayout>